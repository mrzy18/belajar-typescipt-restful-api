    "/api/users": {
      "post": {
        "tags": [
          "User API"
        ],
        "summary": "Register User",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userRegisterReqBodySchema"
              },
              "example": {
                "username": "johndoe18",
                "password": "superSecret",
                "name": "John Doe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Register User Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userResBodySchema"
                },
                "example": {
                  "status": "success",
                  "data": {
                    "username": "johndoe18",
                    "name": "John Doe"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Register User Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "status": "failed",
                  "data": {
                    "message": "error message"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/login": {
