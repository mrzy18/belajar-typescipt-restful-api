      "get": {
        "security": [
          {
            "contactAuth": []
          }
        ],
        "tags": [
          "Contact API"
        ],
        "summary": "Search Contact",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "search with contact firstName or lastname, optional",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "phone",
            "in": "query",
            "required": false,
            "description": "search with contact phone, optional",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "query",
            "required": false,
            "description": "search with email, optional",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "optional",
            "schema": {
              "type": "number",
              "default": 1
            }
          },
          {
            "name": "size",
            "in": "query",
            "required": false,
            "description": "optional",
            "schema": {
              "type": "number",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "firstName": {
                            "type": "string"
                          },
                          "lastName": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "phone": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "paging": {
                      "type": "object",
                      "properties": {
                        "currentPage": {
                          "type": "number"
                        },
                        "totalPage": {
                          "type": "number"
                        },
                        "size": {
                          "type": "number"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "status": "success",
                  "data": [
                    {
                      "id": 1,
                      "firsName": "John",
                      "lastName": "Doe",
                      "email": "johndoe18@email.com",
                      "phone": "081234567899"
                    },
                    {
                      "id": 2,
                      "firsName": "Jane",
                      "lastName": "Doe",
                      "email": "janedoe18@email.com",
                      "phone": "089987654321"
                    }
                  ],
                  "paging": {
                    "currentPage": 1,
                    "totalPage": 10,
                    "size": 10
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
